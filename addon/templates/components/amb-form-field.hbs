{{#with (component inputComponent
          classNames=inputClass
          type=type
          value=value
          formattedValue=formattedValue
          convertedOptions=convertedOptions
          prompt=prompt
          placeholder=placeholder) as |input|}}
  {{#if hasBlock}}
    {{yield (hash
      input=input
      header=(component 'amb-form-field-header' field=this)
      label=(component 'amb-form-field-label' field=this)
      hint=(component 'amb-form-field-hint' field=this)
      description=(component 'amb-form-field-description' field=this)
      errors=(component 'amb-form-field-errors' field=this)
    )}}
  {{else}}
    {{amb-form-field-header field=this}}
    {{component input}}
    {{amb-form-field-description field=this}}
    {{amb-form-field-errors field=this}}
  {{/if}}
{{/with}}
