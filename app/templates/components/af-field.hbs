<span class='af-header {{headerClass}}'>
  {{#if label}}
    <span class='af-label {{labelClass}}'>{{label}}</span>
  {{/if}}
  {{#if hint}}
    <em class='af-hint {{hintClass}}'>{{hint}}</em>
  {{/if}}
</span>

<span class='af-body'>
  {{#if hasBlock}}
    {{yield value}}
  {{else}}
    {{component inputComponent class=inputClass value=value type=type options=options prompt=prompt placeholder=placeholder}}
  {{/if}}
</span>

{{#if showError}}
  <span class='af-error {{errorClass}}'>{{errors}}</span>
{{/if}}
