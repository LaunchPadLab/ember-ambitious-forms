<h1>Welcome to <code>ember-ambitious-forms</code>!</h1>

<h2>Basic</h2>
{{#af-form submit='formSubmit' error='formError' as |af|}}
  {{af.field label='Email'}}
  {{af.field label='Name' value='Charlie Brown'}}
  {{af.field label='Address' hint='hint'}}
  {{af.field label='Phone' placeholder='(XXX) XXX-XXXX'}}
  {{af.field label='Ready?' value=true optionValues=boolOpts}}
  {{af.field label='Set?' value=false optionValues=boolOpts type='radio-group'}}
  {{af.field label='Go?' type='checkbox'}}

  <button>Submit</button>
{{/af-form}}

<h2>Scope</h2>
{{#af-form scope=formParams submit='formSubmit' error='formError' as |af|}}
  {{af.field 'email' label='Email'}}
  {{af.field 'name' label='Name'}}
  {{af.field 'address' label='Address'}}
  {{af.field 'phone' label='Phone'}}
  {{af.field 'isReady' label='Ready?' optionValues=boolOpts}}
  {{af.field 'isSet' label='Set?' optionValues=boolOpts type='radio-group'}}
  {{af.field 'isGo' label='Go?' type='checkbox'}}

  <button>Submit</button>
{{/af-form}}
